{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["unicorn", "typescript", "oxc"],
  "categories": {
    "correctness": "error",
    "perf": "error",
    "suspicious": "error",
    "pedantic": "warn"
  },
  "rules": {
    "no-inline-comments": "allow",
    "no-useless-undefined": "allow"
  },
  "settings": {
    "vitest": {
      "typecheck": true
    }
  },
  "env": {
    "builtin": true
  },
  "globals": {},
  "ignorePatterns": []
}
